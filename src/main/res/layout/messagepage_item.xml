<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messagepage_item_circle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/meiko"
            android:scaleType="centerCrop">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/messagepage_item_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/messagepage_item_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#fa55a1"
            android:text="哔哩哔哩"></TextView>
        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/messagepage_item_message"
            android:layout_below="@+id/messagepage_item_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/messagepage_item_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="哔哩哔哩"></TextView>
        <TextView
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messagepage_item_time"
            android:layout_alignParentRight="true"
            android:text="12-12"></TextView>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#128787"></View>
</LinearLayout>