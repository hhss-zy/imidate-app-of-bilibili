<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F4F2F2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:text="消息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></TextView>
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/image_ellipsis"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/lianxiren"></ImageView>
        <ImageView
            android:id="@+id/image_ellipsis"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ellipsis"></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:id="@+id/all_linearlayout_messagepage"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/reply"
                android:layout_width="25dp"
                android:layout_height="25dp"
                >
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复我的"
                android:textSize="12dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/aite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                >
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#我"
                android:textSize="12dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/likes"
                android:layout_width="25dp"
                android:layout_height="25dp"
                >
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞"
                android:textSize="12dp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/notice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                >
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/color_main"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统通知"
                android:textSize="12dp"></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="13dp"
        android:padding="10dp"
        android:background="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="聊天列表"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagepage_list_recycleview"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>