<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#f3f3f3"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:scaleType="centerCrop"
            android:id="@+id/image_recommend_touxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/b_login"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/image_recommend_touxiang"
            android:id="@+id/recommend_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dddds"
            android:textSize="16sp"></TextView>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/recommend_name_tv"
            android:layout_toRightOf="@+id/image_recommend_touxiang"
            android:id="@+id/recommend_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4小时"
            android:textSize="15sp"></TextView>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ellipsis"></ImageView>
    </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp"
                android:id="@+id/recommend_iamge_voide"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ImageView>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/videoplay"
                android:layout_width="30dp"
                android:layout_height="30dp"></ImageView>
            <TextView
                android:textColor="@color/white"
                android:id="@+id/recommend_voidetime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:34"
                android:layout_gravity="bottom|right"></TextView>
        </FrameLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/recommend_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实打实打算"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="17sp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/voide_pinglun"
                android:layout_width="20dp"
                android:layout_height="20dp"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/voide_dianzan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>