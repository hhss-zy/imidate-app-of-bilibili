<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainbody.VideoplayActivity">
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/Videoplay_vd"></com.google.android.exoplayer2.ui.StyledPlayerView>
            <ImageView
                android:id="@+id/video_back"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/leftjiantou"></ImageView>
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
       android:paddingTop="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/video_title"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:text="红花石蒜"></TextView>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/video_imagehead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dls"
                android:scaleType="centerCrop"></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/video_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="红花石蒜"
                android:layout_toRightOf="@+id/video_imagehead"
                android:textColor="#fa55a1"
                android:layout_marginLeft="15dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"></TextView>
            <TextView
                android:padding="5dp"
                android:background="@color/huise"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="关注"></TextView>
        </RelativeLayout>
     <androidx.recyclerview.widget.RecyclerView
         android:background="@color/white"
         android:id="@+id/video_recyclerView"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>