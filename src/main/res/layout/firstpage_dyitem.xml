<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_margin="10dp"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/turntovide_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dyitem_image"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/b_login"></ImageView>

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/videoplay"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/dytime_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6:34"
            android:layout_gravity="bottom|right"></TextView>
    </FrameLayout>

    <TextView
        android:id="@+id/dyitem_title"
        android:textStyle="bold"
        android:lines="2"
        android:ellipsize="end"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="sssssddsddsdsddsssssddsd"
        android:maxLines="2"></TextView>
    <TextView
        android:id="@+id/dyitem_name"
        android:textSize="15sp"
        android:text="hhss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
</LinearLayout>
</LinearLayout>